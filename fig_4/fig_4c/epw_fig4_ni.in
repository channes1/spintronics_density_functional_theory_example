&inputepw
  prefix = 'fig4_ni_thiol',
  outdir = './tmp_fig4_ni',
  wannierize = .true.,

  # coarse DFT grids used
  nk1 = 4, nk2 = 4, nk3 = 64,
  nq1 = 1, nq2 = 1, nq3 = 4,

  # fine interpolation grids for EPW (transport needs dense q/k)
  nkf1 = 12, nkf2 = 12, nkf3 = 192,
  nqf1 = 1, nqf2 = 1, nqf3 = 192,

  emin = -10.0, emax = 10.0,
  degaussw = 0.01,

  gkk_file = 'gkk.h5',
  g_R_file = 'g_R.h5',
  write_ep_couplings = .true.,
/

